@model Library.UI.WEB.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}
<h4>Login</h4>
<hr />

<div class="row">

    <div class="col-md-4">

        <form asp-action="Login">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" id="login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" id="pass" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            @if(ViewBag.LoginError != null)
            {
                <p class="text-danger">@ViewBag.LoginError</p>
            }

            <div class="form-group">
                <input type="submit" id="login-user" value="Create" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Edition")
</div>

<script src="~/js/scriptLogin.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

