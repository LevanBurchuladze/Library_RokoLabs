@model Library.Entities.NewsPaper

@{
    ViewData["Title"] = "NewsPaperAdd";
}

<h1>NewsPaperAdd</h1>
<hr />

<div class="row">

    <div class="col-md-4">

        <form asp-action="NewsPaperAdd">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <label class="control-label">Added NewsPapers</label>
            <div class="form-group">
                <div class="multi_select_box">
                    <select name="selNewsPaper" id="GetNewsPaper" class="custom-select w-100" title="NewsPaper">
                        @{ foreach (var item in ViewBag.News)
                            {
                                <option value="@item.ISSN,@item.Title,@item.PublicationHouse,@item.Date.ToShortDateString()">@item.ISSN, @item.Title, @item.PublicationHouse, @item.Date.ToShortDateString()</option>
                            }
                        }
                    </select>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input id="Title" asp-for="Title" name="Title" class="form-control" placeholder="Желтая пресса" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublicationPlace" class="control-label"></label>
                <input asp-for="PublicationPlace" name="PublicationPlace" class="form-control" placeholder="Москва" />
                <span asp-validation-for="PublicationPlace" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublicationHouse" class="control-label"></label>
                <input id="PublicationHouse" asp-for="PublicationHouse" name="PublicationHouse" class="form-control" placeholder="Волга-Пресс" />
                <span asp-validation-for="PublicationHouse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublicationYear" class="control-label"></label>
                <input asp-for="PublicationYear" name="PublicationYear" class="form-control" placeholder="@DateTime.Now.Year" />
                <span asp-validation-for="PublicationYear" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CountPages" class="control-label"></label>
                <input asp-for="CountPages" name="CountPages" class="form-control" placeholder="9" />
                <span asp-validation-for="CountPages" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" name="Description" class="form-control" placeholder="Немецко-русская газета, издававшаяся в оккупированном Пскове в конце Второй мировой войны." />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" name="Number" class="form-control" placeholder="31228" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input id="Date" asp-for="Date" type="date" name="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ISSN" class="control-label"></label>
                <input id="ISSN" asp-for="ISSN" name="ISSN" class="form-control" placeholder="ISSN 1234-5678" />
                <span asp-validation-for="ISSN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" id="AddProduct" value="Add NewsPaper" class="btn btn-primary" />
            </div>

        </form>

    </div>

</div>

<div>
    @Html.ActionLink("Back to List", "Index", "Edition")
</div>

<script src="~/js/scriptNewsPaper.js" asp-append-version="true"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
